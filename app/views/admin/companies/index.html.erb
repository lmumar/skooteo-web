<div>
  <input type='hidden' data-target='companies.companyType' value='<%= params[:company_type] %>' />
  <div class="header">
    <div class="d-flex">
      <h1 class="title is-inline-block">
        <span class="icon"><i class="fas fa-building"></i></span>
        Companies
      </h1>
    </div>
    <div class="d-flex">
      <div class="tabs is-inline-block">
        <ul data-target="companies.tab">
          <li class=<%=set_company_type_tab_class 'fleet_operator'-%>>
            <%= link_to admin_companies_path(company_type: 'fleet_operator') do %>
              <span class="icon is-small"><i class="fas fa-ship"></i></span>
              <span>Vessels</span>
            <% end %>
          </li>
          <li class=<%=set_company_type_tab_class 'advertiser'-%>>
            <%= link_to admin_companies_path(company_type: 'advertiser') do %>
              <span class="icon is-small"><i class="fas fa-id-badge"></i></span>
              <span>Advertisers</span>
            <% end %>
          </li>
          <!-- DISABLE FOR NOW
          <li class=<%=set_company_type_tab_class 'content_provider'-%>>
            <%= link_to admin_companies_path(company_type: 'content_provider') do %>
              <span class="icon is-small"><i class="fas fa-id-badge"></i></span>
              <span>Content Providers</span>
            <% end %>
          </li>
          -->
        </ul>
      </div>
    </div>
  </div>

  <div class="content">
    <nav class="level">
      <div class="level-left">
        <div class="field">
          <p class="control has-icons-left">
          <input
            data-controller="location-search"
            data-location-search-target="query"
            data-action='keypress->location-search#keypress'
            value='<%= params[:q] %>'
            class="input"
            type="text"
            placeholder="Search Companies"
          >
          <span class="icon is-small is-left">
            <i class="fas fa-search"></i>
          </span>
          </p>
        </div>
      </div>
      <div class="level-right">
        <%= link_to new_admin_company_path(company_type: params[:company_type]), class: "button is-secondary",
          data: { controller: 'links', 'links-turbo-value': true, action: 'click->links#visit' } do %>
          <span class="icon"><i class="fas fa-plus"></i></span>
          <span>Create Company</span>
        <% end %>
      </div>
    </nav>
    <%= render "list" %>
  </div>
</div>
